<h1 style="bold">{{viewTitle}}</h1>
<form action="/toy" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{toy._id}}">
    <div class="form-group">
        <label>Name:</label>
        <input type="text" class="form-control" name="fullName" value="{{toy.fullName}}" placeholder="Add name of Toy">
        <div class="text-danger">
            {{toy.fullNameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Entry price:</label>
        <input type="text" class="form-control" name="email" value="{{toy.email}}" placeholder="Add Entry price of Toy">
        <div class="text-danger">
            {{toy.emailError}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group md-6">
            <label>Price:</label>
            <input type="text" name="mobile" placeholder="Add Price of Toy" value="{{toy.mobile}}" class="form-control">

        </div>
        <div class="form-group md-6">
            <label>Product Type:</label>
            <input type="text" name="city" placeholder="Add Product Type of Toy" value="{{toy.city}}" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <button type="submit" style="color: black" class="btn btn-warning"><i class="fa fa-database"> Submit</i></button>
        <a href="/toy/list" class="btn btn-primary" style="color: black;">
            <i class="fa fa-list-alt"> View All</i >
        </a>
    </div>
</form>